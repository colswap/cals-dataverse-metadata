    "링크": {
      "label_en": "accessURL",
      "type": "varchar(100)",
      "obligation": "mandatory",
      "description": "AI Hub 내 데이터셋 접속 URL"
    }
  },

  "quality_guideline_fields": {
    "note": "인공지능 학습용 데이터 품질관리 가이드라인 v3.1 (2024) 기반 추가 메타데이터 항목",
